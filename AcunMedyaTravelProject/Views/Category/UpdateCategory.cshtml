@model AcunMedyaTravelProject.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container py-5">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h2 class="card-title mb-4 text-center">Kategoriyi Güncelle</h2>

            <form method="post">
                @Html.HiddenFor(a => a.CategoryID)

                <div class="mb-3">
                    <label for="Title" class="form-label">Kategori Başlığı</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @placeholder = "Kategori başlığını güncelleyin" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>


