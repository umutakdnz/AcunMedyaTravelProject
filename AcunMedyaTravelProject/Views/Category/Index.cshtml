@model List<AcunMedyaTravelProject.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <br /> <br />
    <h2>Kategoriler Listesi</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>ID</td>
                <td>Kategori Başlığı</td>
                <td>Güncelle</td>
                <td>Sil</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.CategoryID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
    <br /> <br />
    <a href="/Category/AddCategory/" class="btn btn-dark">Ekle</a>
</div>

<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin misin?",
            text: "Dikkat bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, silin!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veri silindi.",
                    icon: "success",
                    allowOutsideClick: false
                }).then((result) => {
                    window.location.href = '/Category/DeleteCategory/' + id;
                });
            }
        });
    }
</script>

