@model List<AcunMedyaTravelProject.Entities.Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <br /> <br />
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetler Listesi</h2>
        <a href="/Services/SearchServices/" class="btn btn-info">
            <i class="fa-solid fa-magnifying-glass-arrow-right"></i>
        </a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>ID</td>
                <td>Başlık</td>
                <td>Açıklama</td>
                <td>Resim Url</td>
                <td>Güncelle</td>
                <td>Sil</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.ServicesID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
    <br /> <br />
    <a href="/Services/AddServices/" class="btn btn-dark">Ekle</a>
</div>

<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin misin?",
            text: "Dikkat bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, silin!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veri silindi.",
                    icon: "success",
                    allowOutsideClick: false
                }).then((result) => {
                    window.location.href = '/Services/DeleteServices/' + id;
                });
            }
        });
    }
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
