@model AcunMedyaTravelProject.Entities.Destinations
@{
    ViewBag.Title = "UpdateDestinations";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container py-5">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h2 class="card-title mb-4 text-center">Hizmeti Güncelle</h2>

            <form method="post">
                @Html.HiddenFor(a => a.DestinationsID)

                <div class="mb-3">
                    <label for="Title" class="form-label">Ülke - Şehir</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Destinasyon başlığını güncelleyin" })
                </div>

                <div class="mb-3">
                    <label for="Description1" class="form-label">Fiyat</label>
                    @Html.TextAreaFor(x => x.Description1, new { @class = "form-control", @placeholder = "Destinasyon fiyatını güncelleyin" })
                </div>

                <div class="mb-3">
                    <label for="Description2" class="form-label">Süre</label>
                    @Html.TextAreaFor(x => x.Description2, new { @class = "form-control", @placeholder = "Destinasyon süresini güncelleyin" })
                </div>

                <div class="mb-3">
                    <label for="CategoryID" class="form-label">Kategori ID</label>
                    @Html.TextAreaFor(x => x.CategoryID, new { @class = "form-control", @placeholder = "Kategori ID güncelleyin" })
                </div>

                <div class="mb-3">
                    <label for="ImageUrl" class="form-label">Resim URL</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "Resim bağlantısını güncelleyin" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>


