
@{
    ViewBag.Title = "AddDestinations";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container py-5">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h2 class="card-title mb-4 text-center">Yeni Destinasyon Ekle</h2>

            <form method="post">
                <div class="mb-3">
                    <label for="Title" class="form-label">Ülke - Şehir</label>
                    <input type="text" class="form-control" id="Title" name="Title" placeholder="Destinasyon başlığını girin">
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Fiyat</label>
                    <textarea class="form-control" id="Description1" name="Description1" placeholder="Destinasyon fiyatını yazın"></textarea>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Süre</label>
                    <textarea class="form-control" id="Description2" name="Description2" placeholder="Destinasyon süresini yazın"></textarea>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Kategory ID</label>
                    <textarea class="form-control" id="CategoryID" name="CategoryID" placeholder="Kategori ID yazın"></textarea>
                </div>

                <div class="mb-3">
                    <label for="ImageUrl" class="form-label">Resim URL</label>
                    <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="Resim bağlantısını girin">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
